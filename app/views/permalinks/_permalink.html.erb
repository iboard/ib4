<p>
  <%= hidden_field_tag "#{permalink.linkable.class.to_s.downcase}[permalink_ids][]", permalink.id -%>
  <%= link_to(
        ((request.env['SERVER_PROTOCOL'].include?("HTTPS")) ? "https://" : "http://")+
        request.env['SERVER_NAME'] + 
        "/" +  permalink.url, 
        "/"+permalink.url 
      )
   -%>
  <% if current_user && (current_user == permalink.linkable.user || current_user.is_admin?) %>
    <%= link_to BACKSPACE_CHAR, permalink_path(permalink), :method => 'delete', :confirm => t(:are_you_sure, :what => t(:delete_a_permalink)), :title => t(:delete) -%>
  <% end %>
</p>
