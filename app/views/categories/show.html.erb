<% title t(:category_show, :category => h(@category.name)) %>

<% box_float_right(200) do %>
  <h3><%= link_to CAN_OPEN+NBSP+t(:categories), categories_path -%></h3>
  <ul>
    <% Category.ascend_by_name.each do |cat| %>
      <li><%= link_to cat.name, cat %> (<%= cat.categorizables.length %>)</li>
    <% end %>
  </ul>
<% end %>

<h1><%= h(@category.name) -%></h1>
<%- if current_user && current_user.is_admin? %>
  <p>
    <%= link_to "Edit", edit_category_path(@category) %> |
    <%= link_to "Destroy", @category, :confirm => 'Are you sure?', :method => :delete %> |
    <%= link_to "View All", categories_path %>
  </p>
<%- end -%>
<p><%= t(:count_entries, :count => @items.length ) -%></p>
<%=@category.description.to_txt %>


<%= will_paginate @items %>
<% @items.each do |item| %>
  <% if item.categorizable %>
    <%= render :partial => "/#{item.categorizable.class.to_s.pluralize.downcase}/#{item.categorizable.class.to_s.downcase}_short", 
               :locals => { item.categorizable.class.to_s.downcase.to_sym => item.categorizable } 
    %>
  <% else %>
    <%= t(:item_deleted, :item => debug(item)) %>
  <% end %>
<% end %>
<%= will_paginate @items %>
