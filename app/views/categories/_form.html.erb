<div class='form_left_500'>
  <% form_for @category do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.textile_editor :description, :rows => 5 %>
    </p>
    <p>
      <%= f.label :public %><br />
      <%= f.check_box :public %>
    </p>
    <p><%= f.submit "Submit" %></p>
  <% end %>
</div>
<%= textile_editor_initialize -%> 
