<% form_for @category do |f| %>

  <% box_float_right('300px') do %>
    <% content_tag :div, :id=>'edit_permalinks' do %>
      <p><%= render :partial => '/permalinks/edit_links', :locals => { :linkable => @category } -%></p>
      <p>
         <%= label_tag t(:new_permalink) -%>:
         <br/>
         <%= text_field_tag   'category[new_permalink]', '', :size => 25 -%>
      </p>
    <% end %>
  <% end %>
  
  <% content_tag :div, :class=>'form_left_500' do %>  
    <%= f.error_messages %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.textile_editor :description, :rows => 5 %>
    </p>
    <p>
      <%= f.label :public %><br />
      <%= f.check_box :public %>
    </p>
    <p><%=  save_and_cancel_buttons(f, @category, (@category.new_record? ? categories_path : category_path(@category)), categories_path) -%></p>
  <% end %>
  
<% end %>
  
