<% title t(:session_history) + "-" + current_user.fullname %>

<table width='100%'>
    <tr><th>Log in</th><th>Log out</th><th>Duration</th></tr>
    <% sum = 0.0 %>
  <% @notes.each do |note| %>
    <tr>
        <td>
          <%= Time.at( note.parent.message_value.to_i ) -%>
        </td>
        <td>
            <%= Time.at( note.message_value.to_i ) -%>
        </td>
        <td align='right'>
            <%= ((note.message_value.to_i-note.parent.message_value.to_i)/60.0).round(2) -%>min
            <% sum += note.message_value.to_i-note.parent.message_value.to_i %>
        </td>
    </tr>
  <%end %>
    <tr><th>first log in</th><th>last log out</th><th>total logged in</th></tr>
    <tr>
        <td><%= Time.at(@notes.first.parent.message_value.to_i) %></td>
        <td><%= Time.at(@notes.last.message_value.to_i) %></td>
        <td align='right'><%= (sum/60.0).round(2) -%>min</td>
    </tr>
</table>