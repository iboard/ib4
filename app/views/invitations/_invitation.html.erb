<h3>
  <%=h invitation.sender.fullname %> -> <%= invitation.recipient_email -%>
  (<%= invitation.created_at %>)
</h3>
<%= invitation.message.to_txt %>

<% if invitation.recipient %>
  <p>
      <%= t(:accepted) %> (<%= invitation.updated_at %>)
      <br/>
      <b><%= t(:new_user) -%></b>:
      <%= link_to invitation.recipient.username, invitation.recipient -%>
      <br />
      <%= image_tag invitation.recipient.avatar.url(:thumb), :align => :bottom%>
      
  </p>
<% end %>

<%= link_to "Show", invitation %>
<%= link_to "Edit", edit_invitation_path(invitation) %>
<%= link_to "Destroy", invitation, :confirm => 'Are you sure?', :method => :delete %>