<% title "Invitations" %>

<table>
  <tr>
    <th>Sender</th>
    <th>Recipient</th>
    <th>Token</th>
    <th>Message</th>
    <th>State</th>
  </tr>
  <% for invitation in @invitations %>
    <tr>
      <td><%=h invitation.sender_id %></td>
      <td><%=h invitation.recipient_id %></td>
      <td><%=h invitation.token %></td>
      <td><%=h invitation.message %></td>
      <td><%=h invitation.state %></td>
      <td><%= link_to "Show", invitation %></td>
      <td><%= link_to "Edit", edit_invitation_path(invitation) %></td>
      <td><%= link_to "Destroy", invitation, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Invitation", new_invitation_path %></p>
