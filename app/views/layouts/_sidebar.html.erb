<% box_float_right("200px") do %>
  <p>
    <%= link_to CAN_OPEN+NBSP+t(:pages), pages_path -%><br/>
    <%= link_to CAN_OPEN+NBSP+t(:postings), postings_path -%><br/>
    <%= link_to CAN_OPEN+NBSP+t(:subscribe_rss_feed), rss_path -%>    
  </p>

  <%- if current_user %>
    <p>
      <%= CAN_OPEN+NBSP+link_to( t(:new_posting), new_posting_path) %><br/>
      <%= CAN_OPEN+NBSP+link_to( t(:new_page), new_page_path) %>
    </p>
  <%- end -%>
  <h3><%= link_to CAN_OPEN+NBSP+t(:categories), categories_path -%></h3>
  <ul>
    <li style='padding-left: 0px;margin-left:-15px;'><%= link_to t(:all_pages), pages_path -%> (<%= Page.all.length -%>)</li>
    <% cache(:categories_index_pages) do %>
      <%- Category.ascend_by_name.each do |category| -%>
        <li style='padding-left: 0px;margin-left:-15px;'>
          <%= link_to category.name,category_path(category) -%> 
          (<%= category.categorizables.categorizable_type_is('Posting').length -%>/
          <%= category.categorizables.categorizable_type_is('Page').length -%>)
        </li>
      <%- end -%>
    <% end %>
  </ul>
  
  <h3><br/><%= link_to CAN_OPEN+NBSP+t(:tags), tags_path -%></h3>
  <%= render :partial => '/tags/tag_index' -%>

<% end %>