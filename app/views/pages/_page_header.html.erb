<h1 class='title_text'>
  <%- if page.categories.any? %>
      <span class='header_categories'>
        <%= page.categories.map{|c| link_to(c.name, category_path(c))}.join(", ") -%><br/>
      </span>
  <%- end -%>
  <%=link_to h(page.title), page -%>
</h1>
<% unless page.permalinks.empty? %>
    <%- toggle_display_link(t(:permalinks)) do -%>
      <blockquote>
      <%= render :partial => page.permalinks %>
      </blockquote>
    <%- end -%>
<% end %>


<div class='page_edit_buttons'>
  <%- if current_user && (page.user == current_user || current_user.is_admin?) -%>
    <%= CAN_OPEN+NBSP+link_to( "Edit", edit_page_path(page)) %> |
    <%= link_to "Destroy", page, :confirm => 'Are you sure?', :method => :delete %>
  <%- end -%>
  <br clear=left />
</div>
